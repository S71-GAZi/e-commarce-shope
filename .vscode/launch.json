{
  "version": "0.2.0",
  "configurations": [
    
    {
      "name": "Next.js Dev (Safe)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/next/dist/bin/next",
      "args": ["dev", "-p", "3001"],
      "cwd": "${workspaceFolder}",
      "runtimeArgs": ["--inspect=9229"],
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
